{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "max-len": [1, 120, 2, {ignoreComments: true}],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "camelcase": [1],
    "class-methods-use-this": [1],
    "no-underscore-dangle": [0]
  },
  "extends": ["eslint:recommended", "plugin:import/react", "plugin:react/recommended", "airbnb-base"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".jsx"]
      }
    }
  },
}
